<body>
    <!-- Inloggningsinfo och utloggning -->
    <div class="user-info-box" style="position: absolute; top: 10px; right: 20px;">
        <% if current_user %>
            <span class="user-info-text">Inloggad som: <%= current_user['username'] %></span>
            <form action="/logout" method="get" style="display: inline;">
                <button type="submit" class="logout-btn">Logga ut</button>
            </form>
        <% else %>
            <span class="user-info-text">Ej inloggad</span>
        <% end %>
    </div>

    <!-- Adminflik -->
